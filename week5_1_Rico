#include "stdio.h"

//主要用了桶排序的思想
int sumOfString(char *s){
    int list[27] = {0},i = 0, j, tmp = 0, sum = 0;
    while(s[i] != '\0'){
        if (s[i] >= 'A' && s[i] <= 'Z')
        {
            list[s[i] - 'A' + 1] += 1;
        } else if (s[i] >= 'a' && s[i] <= 'z') {
            list[s[i] - 'a' + 1] += 1;
        }
        i++;
    }

    for (i = 1; i < 26; i++){
        for (j = i + 1; j < 27; j++){
            tmp += list[j];
        }
        if (list[i] != 0) {
            sum += i * tmp * list[i];
        }
        tmp = 0;
    }

    return sum;
}

int main(int argc, char const *argv[])
{
    char a[] = "abc";
    char b[] = "zxy";
    char c[] = "cccdca"
    printf("%d\n", sumOfString(a));
    printf("%d\n", sumOfString(b));
    printf("%d\n", sumOfString(c));
    return 0;
}
