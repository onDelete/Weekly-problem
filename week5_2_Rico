#include "stdio.h"

void rabbit_wolf(int *a, int *b){

    if (*a - 2 <= 0)
        return;
    else {
        if ((*a - 2) / 2 >= *b)
        {
            *a -= *b / 2 * 2;
            *b += *b / 2;
        } else {
            *b += (*a - 2) / 2;
            *a -= (*a - 2) / 2 * 2;
        }
    }
    
}

int glass_rabbit(int *a, int *b){
    if (*a - 2 <= 0)
        return;
    else {
        if ((*a - 2) / 2 >= *b)
        {
            *a -= *b / 2 * 2;
            *b += *b / 2;
        } else {
            *b += (*a - 2) / 2;
            *a -= (*a - 2) / 2 * 2;
        }
    }
}

int main(int argc, char const *argv[])
{
    int x = 5, y = 33, z = 3, i = 1;
    while (1){
        if(i % 3 == 1)
            rabbit_wolf(&y, &z);
        if(i % 2 == 1)
            glass_rabbit(&x, &y);
        x *= 2;
        i++;
        if(z == 50){
            printf("for %d day: x = %d\ty = %d\tz = %d\t\n", i, x, y, z);
            break;
        }
    }
    return 0;
}
